{
  // Core UI stays blank and quiet
  "workbench.startupEditor": "none",
  "workbench.welcomePage.hidden": true,
  "workbench.tips.enabled": false,
  "workbench.enableExperiments": false,
  "workbench.colorTheme": "Default Light+",
  "workbench.statusBar.visible": false,
  "workbench.editor.enablePreview": false,
  "explorer.openEditors.visible": 0,

  // Keep Microsoft services out of the way
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "update.mode": "none",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,

  // Disable Git/SCM views entirely
  "git.enabled": false,
  "scm.autoReveal": false,

  // No file watching, prompts, or automation
  "files.autoSave": "off",
  "files.simpleDialog.enable": true,
  "files.watcherExclude": {
    "**": true
  },
  "search.followSymlinks": false,
  "search.useIgnoreFiles": false,

  // Bare-bones editor only
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.hover.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.inlineSuggest.enabled": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.wordBasedSuggestions": "off",
  "editor.codeLens": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.lightbulb.enabled": "off",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "editor.linkedEditing": false,

  // Manual formatting everywhere
  "html.format.enable": false,
  "workbench.activityBar.location": "hidden"
}
